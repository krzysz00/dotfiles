{
  "env": {
    "ENABLE_LSP_TOOLS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(ls *)",
      "Bash(echo *)",
      "Bash(test *)",
      "Bash(grep *)",
      "Bash(tail *)",
      "Bash(head *)",
      "Bash(cmake *)",
      "Bash(ninja *)",
      "Bash(llvm-lit *)",
      "Bash(FileCheck *)",
      "Bash(mlir-opt *)",
      "Bash(iree-compile *)",
      "Bash(iree-opt *)",
